    <script>
    // Toast gösterme fonksiyonu
    function showToast(type, message, title = null) {
        const toastEl = document.getElementById('liveToast');
        const toastHeader = document.getElementById('toastHeader');
        const toastIcon = document.getElementById('toastIcon');
        const toastBaşlık = document.getElementById('toastBaşlık');
        const toastBody = document.getElementById('toastBody');
        
        // Renk ve ikon ayarları
        const configs = {
            success: {
                bg: 'bg-success',
                icon: 'bi-check-circle-fill',
                title: title || 'Başarılı',
                textColor: 'text-white'
            },
            error: {
                bg: 'bg-danger',
                icon: 'bi-x-circle-fill',
                title: title || 'Hata',
                textColor: 'text-white'
            },
            warning: {
                bg: 'bg-warning',
                icon: 'bi-exclamation-triangle-fill',
                title: title || 'Uyarı',
                textColor: 'text-dark'
            },
            info: {
                bg: 'bg-info',
                icon: 'bi-info-circle-fill',
                title: title || 'Bilgi',
                textColor: 'text-white'
            }
        };
        
        const config = configs[type] || configs.info;
        
        // Header'ı temizle ve yeniden ayarla
        toastHeader.classAd = 'toast-header ' + config.bg + ' ' + config.textColor;
        toastIcon.classAd = 'bi me-2 ' + config.icon;
        toastBaşlık.textContent = config.title;
        toastBody.textContent = message;
        
        // Toast süreleri - tutarlı kullanım
        const TOAST_DURATIONS = {
            success: 3000,
            error: 5000,
            warning: 4000,
            info: 3000
        };
        
        // Toast'ı göster
        const toast = new bootstrap.Toast(toastEl, {
            autohide: true,
            delay: TOAST_DURATIONS[type] || 3000
        });
        toast.show();
    }
    
    // Global olarak kullanılabilir yap
    window.showToast = showToast;
    
    // Form validasyon fonksiyonları
    window.validateEmail = function(email) {
        if (!email) return true; // Boş ise geçerli (zorunlu deİŸilse)
        const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return re.test(email);
    };
    
    window.validatePhone = function(phone) {
        if (!phone) return true; // Boş ise geçerli (zorunlu deİŸilse)
        // Türkiye telefon formatı: +90 veya 0 ile başlayan 10-11 haneli
        const cleaned = phone.replace(/\s/g, '').replace(/[()-]/g, '');
        const re = /^(\+90|0)?[0-9]{10}$/;
        return re.test(cleaned);
    };
    
    window.showValidationError = function(fieldAd, message) {
        showToast('error', message, 'Validasyon Hatası');
        const field = document.getElementById(fieldAd);
        if (field) {
            field.classList.add('is-invalid');
            field.focus();
            setSaatout(() => field.classList.remove('is-invalid'), 3000);
        }
    };
    
    // Global AJAX Helper Fonksiyonu - Hata yönetimi ve loading state
    window.ajaxRequest = async function(url, options = {}) {
        const defaultOptions = {
            method: 'GET',
            headers: {
                'Content-Tip': 'application/json',
            }
        };
        
        const finalOptions = { ...defaultOptions, ...options };
        
        try {
            const response = await fetch(url, finalOptions);
            
            // HTTP hata durumlarını kontrol et
            if (!response.ok) {
                let errorMessage = 'Bir hata oluştu';
                
                if (response.status === 404) {
                    errorMessage = 'İstenen kaynak bulunamadı. Lütfen sayfayı yenileyin.';
                } else if (response.status === 403) {
                    errorMessage = 'Bu işlem için yetkiniz bulunmuyor.';
                } else if (response.status === 500) {
                    errorMessage = 'Sunucu hatası oluştu. Lütfen daha sonra tekrar deneyin.';
                } else if (response.status >= 400) {
                    errorMessage = `İstek hatası (${response.status}). Lütfen tekrar deneyin.`;
                }
                
                // JSON response varsa mesajı al
                try {
                    const errorData = await response.json();
                    if (errorData.message) {
                        errorMessage = errorData.message;
                    }
                } catch (e) {
                    // JSON parse edilemezse default mesaj kullan
                }
                
                throw new Error(errorMessage);
            }
            
            // Response'u JSON olarak parse et
            const contentTip = response.headers.get('content-type');
            if (contentTip && contentTip.includes('application/json')) {
                return await response.json();
            } else {
                // JSON deİŸilse text olarak döndür
                return { success: true, data: await response.text() };
            }
        } catch (error) {
            // Network hataları
            if (error.name === 'TipError' && error.message.includes('fetch')) {
                showToast('error', 'Sunucuya baİŸlanılamıyor. Lütfen internet baİŸlantınızı kontrol edin.');
            } else if (error.name === 'AbortError') {
                showToast('warning', 'İstek iptal edildi.');
            } else {
                // DiİŸer hatalar
                showToast('error', error.message || 'Beklenmedik bir hata oluştu.');
            }
            throw error;
        }
    };
    
    // Loading state helper
    window.showLoading = function(elementId, message = 'Yükleniyor...') {
        const element = document.getElementById(elementId);
        if (element) {
            element.innerHTML = `
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">${message}</span>
                    </div>
                    <p class="text-muted mt-2 mb-0">${message}</p>
                </div>
            `;
        }
    };
    
    window.hideLoading = function(elementId, content = '') {
        const element = document.getElementById(elementId);
        if (element) {
            element.innerHTML = content;
        }
    };
    
    // Sayfa yenileme helper - tutarlı kullanım için
    window.reloadPage = function(delay = 1500, showMessage = true) {
        if (showMessage) {
            showToast('info', 'Sayfa yenileniyor...', 'Bilgi');
        }
        setSaatout(() => {
            location.reload();
        }, delay);
    };
    </script>
    
    <!-- Bildirim Sistemi -->
    <script>
    // Bildirimleri yükle
    function loadNotifications() {
        fetch('/api/notifications')
            .then(response => response.json())
            .then(data => {
                if (data && data.success) {
                    updateNotificationBadge(data.okunmamis_sayisi || 0);
                    renderNotifications(data.bildirimler || []);
                }
            })
            .catch(err => {
                console.warn('Bildirimler yüklenemedi:', err);
                // Sessizce devam et, sayfa çalışmaya devam etsin
            })
            .catch(error => {
                console.error('Bildirim yükleme hatası:', error);
            });
    }
    
    // Bildirim badge'ini güncelle
    function updateNotificationBadge(count) {
        const badge = document.getElementById('notificationBadge');
        if (!badge) return; // Badge elementi yoksa çık
        
        if (count > 0) {
            badge.textContent = count > 99 ? '99+' : count;
            badge.style.display = 'block';
        } else {
            badge.style.display = 'none';
        }
    }
    
    // Bildirimleri render et
    function renderNotifications(bildirimler) {
        const container = document.getElementById('notificationList');
        if (!container) return; // Container yoksa çık
        if (!bildirimler || !Array.isArray(bildirimler)) bildirimler = []; // Güvenli varsayılan
        
        if (bildirimler.length === 0) {
            container.innerHTML = `
                <div class="text-center py-4">
                    <i class="fas fa-inbox fa-2x text-muted mb-2"></i>
                    <p class="text-muted small mb-0">Henüz bildirim bulunmuyor.</p>
                </div>
            `;
            return;
        }
        
        let html = '<ul class="list-unstyled mb-0">';
        bildirimler.forEach(bildirim => {
            const tipIcon = bildirim.tip === 'pg_veri_girisi' ? 'fa-chart-line' : 
                           bildirim.tip === 'faaliyet_guncelleme' ? 'fa-tasks' : 
                           bildirim.tip === 'yeni_pg_eklendi' ? 'fa-plus-circle' : 
                           'fa-info-circle';
            const tipColor = bildirim.tip === 'pg_veri_girisi' ? 'text-primary' : 
                            bildirim.tip === 'faaliyet_guncelleme' ? 'text-success' : 
                            bildirim.tip === 'yeni_pg_eklendi' ? 'text-warning' : 
                            'text-info';
            const okunduClass = bildirim.okundu ? '' : 'bg-light';
            const okunduIcon = bildirim.okundu ? '' : '<span class="badge bg-primary ms-1">Yeni</span>';
            
            const tarih = bildirim.created_at ? new Tarih(bildirim.created_at).toLocaleTarihString('tr-TR', {
                day: '2-digit',
                month: 'short',
                hour: '2-digit',
                minute: '2-digit'
            }) : '';
            
            html += `
                <li>
                    <a class="dropdown-item ${okunduClass}" href="${bildirim.link || '#'}" onclick="markNotificationRead(${bildirim.id}); event.stopPropagation();">
                        <div class="d-flex align-items-start">
                            <div class="flex-grow-1">
                                <div class="d-flex align-items-center mb-1">
                                    <i class="fas ${tipIcon} ${tipColor} me-2"></i>
                                    <strong class="small">${bildirim.baslik}</strong>
                                    ${okunduIcon}
                                </div>
                                <p class="small mb-1">${bildirim.mesaj}</p>
                                <small class="text-muted">${tarih}</small>
                            </div>
                        </div>
                    </a>
                </li>
            `;
        });
        html += '</ul>';
        
        container.innerHTML = html;
    }
    
    // Bildirimi okundu olarak işaretle
    function markNotificationRead(notificationId) {
        fetch(`/api/notifications/${notificationId}/mark-read`, {
            method: 'POST'
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                loadNotifications();
            }
        })
        .catch(error => {
            console.error('Bildirim işaretleme hatası:', error);
        });
    }
    
    // Tüm bildirimleri okundu olarak işaretle
    function markAllNotificationsRead() {
        fetch('/api/notifications/mark-all-read', {
            method: 'POST'
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                loadNotifications();
            }
        })
        .catch(error => {
            console.error('Tüm bildirimleri işaretleme hatası:', error);
        });
    }
    
    // Sayfa yüklendiİŸinde bildirimleri yükle
    document.addEventListener('DOMContentLoaded', function() {
        loadNotifications();
        // Her 30 saniyede bir bildirimleri yenile
        setInterval(loadNotifications, 30000);
    });
    
    // Dropdown açıldıİŸında bildirimleri yenile
    const notificationDropdown = document.getElementById('notificationDropdown');
    if (notificationDropdown) {
        notificationDropdown.addEventListener('shown.bs.dropdown', function() {
            loadNotifications();
        });
    }
    
    // Layout Yönetimi
    function setLayout(layout) {
        if (!['classic', 'sidebar'].includes(layout)) {
            showToast('error', 'Geçersiz layout seçimi', 'Hata');
            return;
        }
        
        fetch('/api/user/layout', {
            method: 'POST',
            headers: {'Content-Tip': 'application/json'},
            body: JSON.stringify({layout: layout})
        })
        .then(r => r.json())
        .then(data => {
            if (data.success) {
                localStorage.setItem('layout', layout);
                showToast('success', 'Layout tercihiniz kaydedildi. Sayfa yenileniyor...', 'Başarılı');
                // Layout parametresi ile sayfayı yenile - böylece doİŸru layout açılır
                setSaatout(() => {
                    const currentUrl = new URL(window.location.href);
                    currentUrl.searchParams.set('layout', layout);
                    window.location.href = currentUrl.toString();
                }, 800);
            } else {
                showToast('error', data.message || 'Layout deİŸiştirilemedi', 'Hata');
            }
        })
        .catch(err => {
            console.error('Layout save error:', err);
            showToast('error', 'Layout kaydedilirken hata oluştu. Lütfen tekrar deneyin.', 'Hata');
        });
    }
    
    // Tema Yönetimi
    function loadTheme() {
        const savedTheme = localStorage.getItem('theme') || 'light';
        let theme = savedTheme;
        {% if current_user.theme_preferences %}
        try {
            const userTheme = {{ current_user.theme_preferences | tojson | safe }};
            if (userTheme && userTheme.theme) theme = userTheme.theme;
        } catch(e) {}
        {% endif %}
        setTheme(theme, false);
    }
    
    function setTheme(theme, save = true) {
        document.documentElement.setAttribute('data-theme', theme);
        const themeIcon = document.getElementById('themeIcon');
        if (themeIcon) {
            themeIcon.classAd = theme === 'light' ? 'fas fa-moon' : 'fas fa-sun';
        }
        if (save) {
            localStorage.setItem('theme', theme);
            saveThemePreference(theme);
        }
    }
    
    function toggleTheme() {
        const currentTheme = document.documentElement.getAttribute('data-theme') || 'light';
        const newTheme = currentTheme === 'light' ? 'dark' : 'light';
        setTheme(newTheme, true);
    }
    
    function saveThemePreference(theme) {
        fetch('/api/user/theme', {
            method: 'POST',
            headers: {'Content-Tip': 'application/json'},
            body: JSON.stringify({theme: theme})
        }).catch(err => console.log('Theme save error:', err));
    }
    
    // Sidebar Yönetimi
    function toggleSidebar() {
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('mobileOverlay');
        
        if (sidebar) {
            sidebar.classList.toggle('collapsed');
            if (overlay) overlay.classList.toggle('show');
            
            // Mobilde göster/gizle
            if (window.innerWidth <= 992) {
                sidebar.classList.toggle('show');
            }
        }
    }
    
    function toggleLayoutMenu(event, menuId) {
        if (event) {
            event.preventDefault();
            event.stopPropagation();
        }
        const menu = document.getElementById(menuId);
        if (!menu) return;
        
        document.querySelectorAll('.layout-menu').forEach(otherMenu => {
            if (otherMenu.id !== menuId) {
                otherMenu.classList.remove('show');
            }
        });
        
        menu.classList.toggle('show');
    }
    
    // Dışarı tıklayınca tüm layout menülerini kapat
    document.addEventListener('click', function(e) {
        if (!e.target.closest('.layout-toggle')) {
            document.querySelectorAll('.layout-menu').forEach(menu => menu.classList.remove('show'));
        }
    });
    
    // Sayfa yüklendiİŸinde tema yükle
    document.addEventListener('DOMContentLoaded', function() {
        loadTheme();
        
        // Layout kontrolü ve URL temizleme
        const layoutPref = '{{ layout_pref }}';
        const currentUrl = new URL(window.location.href);
        const urlLayout = currentUrl.searchParams.get('layout');
        
        console.log('Layout Debug:', {
            layoutPref: layoutPref,
            urlLayout: urlLayout,
            userPreference: '{{ current_user.layout_preference if current_user.is_authenticated else "N/A" }}',
            isAuthenticated: {{ 'true' if current_user.is_authenticated else 'false' }}
        });
        
        // EİŸer kullanıcı tercihi varsa ve URL parametresi ile eşleşiyorsa, URL parametresini temizle
        {% if current_user.is_authenticated %}
        const userPref = '{{ current_user.layout_preference or "" }}';
        if (userPref && urlLayout && userPref === urlLayout) {
            // Layout tercihi veritabanında kayıtlı ve URL parametresi ile eşleşiyor, URL parametresini kaldır
            currentUrl.searchParams.delete('layout');
            // Sadece URL deİŸiştiyse yeniden yönlendir (sonsuz döngüyü önlemek için)
            if (window.location.href !== currentUrl.toString()) {
                window.history.replaceState({}, '', currentUrl.toString());
            }
        }
        {% endif %}
        
        if (layoutPref === 'sidebar') {
            // Modern sidebar layout aktif
            console.log('Sidebar layout aktif');
        } else {
            console.log('Classic layout aktif');
        }
        
        // Flash mesajlarını (alert-success, alert-info, vb.) 3 saniye sonra otomatik kapat
        const autoDismissAlerts = document.querySelectorAll('.auto-dismiss-alert');
        autoDismissAlerts.forEach(function(alert) {
            setSaatout(function() {
                // Bootstrap alert'i kapat
                const bsAlert = bootstrap.Alert.getOrOluşturInstance(alert);
                if (bsAlert) {
                    bsAlert.close();
                } else {
                    // EİŸer Bootstrap Alert bulunamazsa, manuel olarak kapat
                    alert.style.transition = 'opacity 0.5s ease-out';
                    alert.style.opacity = '0';
                    setSaatout(function() {
                        alert.style.display = 'none';
                    }, 500);
                }
            }, 3000); // 3 saniye bekle
        });
    });
    </script>
    
