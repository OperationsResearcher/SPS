    <!-- Bootstrap Dropdown Başlatma - Sayfanın En Sonunda -->
    <script>
    (function() {
        function toggleDropdown(element) {
            var menu = null;
            
            // Menu'yu bul
            if (element.id === 'navbarDropdown') {
                menu = document.querySelector('[aria-labelledby="navbarDropdown"]');
            } else if (element.id === 'dropdownUser1') {
                menu = document.querySelector('[aria-labelledby="dropdownUser1"]');
            } else if (element.id === 'userDropdown') {
                menu = document.querySelector('[aria-labelledby="userDropdown"]');
            } else {
                // Genel yöntem: parent dropdown içinde menu'yu bul
                var dropdownParent = element.closest('.dropdown');
                if (dropdownParent) {
                    menu = dropdownParent.querySelector('.dropdown-menu');
                }
                if (!menu) {
                    menu = element.nextElementSibling;
                    if (!menu || !menu.classList.contains('dropdown-menu')) {
                        menu = document.querySelector('[aria-labelledby="' + element.id + '"]');
                    }
                }
            }
            
            if (menu && menu.classList.contains('dropdown-menu')) {
                var isOpen = menu.classList.contains('show');
                
                // Tüm dropdown'ları kapat
                document.querySelectorAll('.dropdown-menu.show').forEach(function(m) {
                    if (m !== menu) {
                        m.classList.remove('show');
                        var toggleId = m.getAttribute('aria-labelledby');
                        if (toggleId) {
                            var toggle = document.getElementById(toggleId) || document.querySelector('[aria-labelledby="' + toggleId + '"]');
                            if (toggle) toggle.setAttribute('aria-expanded', 'false');
                        }
                    }
                });
                
                // Bu dropdown'ı toggle et
                if (isOpen) {
                    menu.classList.remove('show');
                    element.setAttribute('aria-expanded', 'false');
                } else {
                    menu.classList.add('show');
                    element.setAttribute('aria-expanded', 'true');
                }
                
                console.log('Dropdown toggled:', element.id, 'isOpen:', !isOpen);
                return true;
            } else {
                console.error('Dropdown menu bulunamadı:', element.id, 'menu:', menu);
                return false;
            }
        }
        
        function initDropdowns() {
            console.log('Dropdown başlatılıyor...');
            
            // Tüm dropdown toggle elementlerini bul
            var dropdowns = document.querySelectorAll('[data-bs-toggle="dropdown"], .dropdown-toggle');
            console.log('Bulunan dropdown sayısı:', dropdowns.length);
            
            dropdowns.forEach(function(element) {
                // Click handler ekle
                element.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    console.log('Dropdown clicked:', element.id);
                    
                    // Önce Bootstrap'i dene
                    if (typeof bootstrap !== 'undefined' && typeof bootstrap.Dropdown !== 'undefined') {
                        try {
                            var instance = bootstrap.Dropdown.getInstance(element);
                            if (!instance) {
                                instance = new bootstrap.Dropdown(element);
                            }
                            instance.toggle();
                            console.log('Bootstrap toggle başarılı');
                            return;
                        } catch (err) {
                            console.warn('Bootstrap toggle hatası, fallback kullanılıyor:', err);
                        }
                    }
                    
                    // Fallback: Manuel toggle
                    toggleDropdown(element);
                });
                
                console.log('Dropdown handler eklendi:', element.id);
            });
            
            // Dışarı tıklandığında dropdown'ları kapat
            document.addEventListener('click', function(e) {
                if (!e.target.closest('.dropdown')) {
                    document.querySelectorAll('.dropdown-menu.show').forEach(function(menu) {
                        menu.classList.remove('show');
                        var toggleId = menu.getAttribute('aria-labelledby');
                        if (toggleId) {
                            var toggle = document.getElementById(toggleId) || document.querySelector('[aria-labelledby="' + toggleId + '"]');
                            if (toggle) toggle.setAttribute('aria-expanded', 'false');
                        }
                    });
                }
            });
        }
        
        // Sayfa yüklendiğinde başlat
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', function() {
                setTimeout(initDropdowns, 100);
            });
        } else {
            setTimeout(initDropdowns, 100);
        }
        
        // Window load event'inde de dene
        window.addEventListener('load', function() {
            setTimeout(initDropdowns, 50);
        });
    })();
    </script>
</body>
